@model Entidades.Actividad

@{
    ViewData["Title"] = "Crear Actividad";
}

<div class="container mt-4">
    <h1 class="text-xl font-bold">Crear Actividad</h1>

    <form asp-action="Create" asp-controller="Actividades" method="post">
        <input type="hidden" asp-for="IdGrupo" value="@ViewBag.IdGrupo" />

        <div class="form-group mt-3">
            <label asp-for="Titulo" class="form-label"></label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Descripcion" class="form-label"></label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="FechaActividad" class="form-label"></label>
            <input asp-for="FechaActividad" type="datetime-local" class="form-control" />
            <span asp-validation-for="FechaActividad" class="text-danger"></span>
        </div>

        @* <div class="form-group mt-3">
            <label asp-for="CreadoPor" class="form-label">Creado Por (Id Usuario)</label>
            <input asp-for="CreadoPor" class="form-control" />
            <span asp-validation-for="CreadoPor" class="text-danger"></span>
        </div> *@

        <button type="submit" class="btn btn-primary mt-3">Crear</button>
        <a asp-action="Index" asp-controller="Grupos" class="btn btn-secondary mt-3">Cancelar</a>
    </form>
</div>
