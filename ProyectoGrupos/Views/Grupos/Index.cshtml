@model List<GrupoDTO>

<div class="groups-container">
    <div class="page-header">
        <h3 class="mb-0">
            <i class="fas fa-users me-2"></i>Gestión de Grupos
        </h3>
        
    </div>

    <div class="card-body">
        <button type="button" class="btn btn-outline-primary create-group-btn" data-bs-toggle="modal" data-bs-target="#createGroupModal">
            <i class="fas fa-plus-circle me-1"></i>Crear Nuevo Grupo
        </button>
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table id="dataTable" class="table table-striped table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Integrantes</th>
                            <th>Fecha Creación</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var group in Model)
                        {
                            <tr>
                                <td>@group.Nombre</td>
                                <td>@group.Descripcion</td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-success"
                                             role="progressbar"
                                             style="width: @((group.NumeroActualIntegrantes * 100 / group.NumeroMaximoIntegrantes))%;">
                                            @group.NumeroActualIntegrantes / @group.NumeroMaximoIntegrantes
                                        </div>
                                    </div>
                                </td>
                                <td>@group.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge @(group.Estado == "Activo" ? "bg-success" : "bg-danger")">
                                        @group.Estado
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Manage" asp-route-id="@group.IdGrupo" class="btn btn-info">
                                            <i class="fas fa-cog"></i> Gestionar
                                        </a>
                                        <a asp-controller="Calendario" asp-action="Index" asp-route-grupoId="@group.IdGrupo" class="btn btn-warning">
                                            <i class="fas fa-calendar-alt"></i> Calendario
                                        </a>
                                        <a asp-controller="Actividades" asp-action="Index" asp-route-grupoId="@group.IdGrupo" class="btn btn-secondary">
                                            <i class="fas fa-tasks"></i> Crear Actividad
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center mb-0" role="alert">
                <i class="fas fa-info-circle me-2"></i>No hay grupos disponibles. ¡Crea tu primer grupo!
            </div>
        }
    </div>
</div>

    <!-- Modal para crear grupo -->
    <div class="modal fade" id="createGroupModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-plus-circle me-2"></i>Crear Nuevo Grupo
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="createGroupForm" asp-action="CrearGrupo" method="post">
                        <div class="row g-3">
                            <div class="col-12">
                                <label for="Nombre" class="form-label">Nombre del Grupo</label>
                                <input type="text" class="form-control" id="Nombre" name="Nombre" required>
                            </div>
                            <div class="col-12">
                                <label for="Descripcion" class="form-label">Descripción</label>
                                <textarea class="form-control" id="Descripcion" name="Descripcion" rows="3" required></textarea>
                            </div>
                            <div class="col-md-6">
                                <label for="NumeroMaximoIntegrantes" class="form-label">Máximo Integrantes</label>
                                <input type="number" class="form-control" id="NumeroMaximoIntegrantes" name="NumeroMaximoIntegrantes" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Crear Grupo</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {

            // Confirmación al enviar el formulario
            $('#createGroupForm').on('submit', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: '¿Estás seguro?',
                    text: "Vas a crear un nuevo grupo",
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sí, crear grupo'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.submit(); // Enviar el formulario
                    }
                });
            });
        });

    </script>
}
