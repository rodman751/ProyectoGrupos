<script>
  document.addEventListener('DOMContentLoaded', () => {
    const welcomeContainer = document.querySelector('.welcome-container');
    welcomeContainer.classList.add('animate__animated', 'animate__fadeIn');

    const ctaButton = document.querySelector('.cta-button');
    ctaButton.addEventListener('mouseenter', () => {
      ctaButton.classList.add('animate__animated', 'animate__pulse');
    });
    ctaButton.addEventListener('mouseleave', () => {
      ctaButton.classList.remove('animate__animated', 'animate__pulse');
    });

    const textEffectElements = document.querySelectorAll('.text-effect');
    textEffectElements.forEach((element) => {
      element.classList.add('animate__animated', 'animate__fadeInUp');
    });
  });
</script>